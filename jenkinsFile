pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/yourrepository.git', branch: 'master'
            }
        }

        stage('Build and Start Services') {
            steps {
                bat 'docker-compose up --build -d'
            }
        }

        stage('Run Tests') { 
            steps {
                bat 'docker-compose exec myapp npm test'
            }
        }

        // Other stages for deployment, etc.
    }
    post {
        failure {
            mail (
                subject: "Échec du job '${env.JOB_NAME}'",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'your-email@example.com'
            )
        }
        success {
            mail (
                subject: "Le job '${env.JOB_NAME}' a réussi",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'your-email@example.com'
            )
        }
    }
}