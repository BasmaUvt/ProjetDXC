pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/BasmaUvt/ProjetDXC.git', branch: 'master'
            }
        }

        stage('Run Docker Compose') {
            steps {
                bat 'docker-compose up --build -d'
            }
        }

        stage('Install Dependencies') { 
            steps {
                bat 'docker exec myapp npm ci'
            }
        }
        //stage('Lint') { 
         //   steps {
          //      bat 'docker exec myapp npm run lint'
          //  }
        }
        stage('Build') { 
            steps {
                bat 'docker exec myapp npm run build'
            }
        }
        stage('Run Cypress Tests') {
            steps {
                bat 'docker exec myapp ./node_modules/.bin/cypress run --spec chat-spec.js'
            }
        }
        stage('Deploy') { 
            steps {
                bat 'docker exec myapp npm run deploy'
            }
        }
    }
    post {
        failure {
            mail (
                subject: "Échec du job '${env.JOB_NAME}'",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'besma.rakrouki@gmail.com'
            )
        }
        success {
            mail (
                subject: "Le job '${env.JOB_NAME}' a réussi",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'besma.rakrouki@gmail.com'
            )
        }
    }
}