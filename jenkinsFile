pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/BasmaUvt/ProjetDXC.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                bat 'docker-compose build'
            }
        }


        stage('Test') { 
            steps {
                bat 'docker-compose up -d'
                bat 'docker-compose exec app npm test'
                bat 'docker-compose down'
            }
        }

       
        stage('Deploy') {
            steps {
                bat 'docker-compose up -d'
            }
        }
    }
    
    post {
        failure {
            mail (
                subject: "Échec du job '${env.JOB_NAME}'",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'besma.rakrouki@gmail.com'
            )
        }
        success {
            mail (
                subject: "Le job '${env.JOB_NAME}' a réussi",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'besma.rakrouki@gmail.com'
            )
        }
    }
}