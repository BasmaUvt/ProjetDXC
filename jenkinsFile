pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/BasmaUvt/ProjetDXC.git', branch: 'master'
            }
        }

        stage('Install') {
            steps {
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                bat 'npm test'
            }
        }

//        stage('Run') {
//            steps {
//                bat 'start /b cmd /c "node server.js"'
//            }
//        }

        stage('Docker Build') {
            steps {
                bat 'docker build -t applicationchat .'
            }
        }
        
        stage('Run Docker Compose') {
            steps {
                bat 'docker-compose up -d'
            }
        }
    }

post {
    failure {
        mail (
            subject: "Échec du job '${env.JOB_NAME}'",
            body: "L'URL du job est : ${env.BUILD_URL}",
            to: 'besma.rakrouki@gmail.com'
        )
    }

    success {
        mail (
            subject: "Le job '${env.JOB_NAME}' a réussi",
            body: "L'URL du job est : ${env.BUILD_URL}",
            to: 'besma.rakrouki@gmail.com'
        )
    }
}
}