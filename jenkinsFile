pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/BasmaUvt/ProjetDXC.git', branch: 'master'
            }
        }

        stage('Install') {
            steps {
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                bat 'npm test'
            }
        }

        stage('Run') {
            steps {
                bat 'start /b cmd /c "node server.js"'
            }
        }

        stage('Docker Build') {
            steps {
                bat 'docker build -t applicationchat .'
            }
        }
        
        stage('Docker Run Locally') {
            steps {
                bat 'docker run -p 3000:3000 applicationchat'
            }
        }
    }

    post {
        failure {
            emailext (
                subject: "Échec du job '${env.JOB_NAME}'",
                body: "L'URL du job est : ${env.BUILD_URL}",
                to: 'besma.rakrouki2@dxc.com'
            )
        }

        success {
            emailext (
                subject: "Le job '${env.JOB_NAME}' a réussi",
                body: "L'URL du job est : ${env.BUILD_URL}",
                recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                to: 'besma.rakrouki2@dxc.com'
            )
        }
    }
}